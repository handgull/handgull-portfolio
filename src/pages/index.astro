---
import SocialList from "@/components/SocialList.astro";
import PostPreview from "@/components/blog/PostPreview.astro";
import PageLayout from "@/layouts/Base.astro";
import { getAllPosts, sortMDByDate } from "@/utils";

const MAX_POSTS = 10;
const allPosts = await getAllPosts();
const allPostsByDate = sortMDByDate(allPosts).slice(0, MAX_POSTS);

const cactusTech: { desc: string; href?: string; title: string }[] = [
	{
		desc: "Impeller, FFI, Packages, Canvas, Build runner, Routing, Widgets, Context",
		href: "https://flutter.dev/",
		title: "Flutter",
	},
	{
		desc: "Events, State management, Reactive programming, When",
		href: "https://bloclibrary.dev/",
		title: "BLoC",
	},
	{
		desc: "Signals, DI, Services, Standalone, Components, Lazy loading, Webpack",
		href: "https://angular.io/",
		title: "Angular",
	},
	{
		desc: "Observable, Subject, Subscription, Scheduler, Operators, MergeMap",
		href: "https://rxjs.dev/",
		title: "RxJS",
	},
	{
		desc: "CSS, Minify, Classes",
		href: "https://tailwindcss.com",
		title: "Tailwind CSS",
	},
	{
		desc: "Rebase, Branch, Commit, Merge",
		href: "https://git-scm.com/",
		title: "Git",
	},
	{
		desc: "Jira, Agile, SCRUM, And more...",
		title: "And more",
	},
];
---

<PageLayout meta={{ title: "Home" }}>
	<section>
		<h1 class="title mb-6">Hello World!</h1>
		<p class="mb-4">
			I am Andrea Gull√¨, i've been working in frontend development since 2018, and in 2020, I
			decided to delve into mobile development as well. I've been using Flutter since version 1.2.x
			and Angular since version 6 (naturally, I've kept up with updates since then). Additionally, I
			have a passion for nutrition, and I've developed <span class="inline-flex"
				><a
					class="cactus-link"
					href="https://zyme-nutrition.netlify.app/en"
					rel="noopener noreferrer"
					target="_blank"
					>ZYME
				</a></span
			>, a calorie tracking app available on android and iOS.
		</p>
		<SocialList />
	</section>
	<section aria-label="Blog post list" class="mt-16">
		<h2 class="title mb-4 text-xl">Posts</h2>
		<ul class="space-y-4">
			{
				allPostsByDate.map((p) => (
					<li class="flex flex-col gap-x-2 sm:flex-row">
						<PostPreview post={p} />
					</li>
				))
			}
		</ul>
	</section>
	<section class="mt-16">
		<h2 class="title mb-4 text-xl">Technologies & Buzzwords</h2>
		<dl class="space-y-4">
			{
				cactusTech.map(({ desc, href, title }) => (
					<div class="flex flex-col gap-2 md:flex-row">
						<dt>
							<span class="flex">
								<a class="cactus-link" href={href} rel="noopener noreferrer" target="_blank">
									{title}
								</a>
								:
							</span>
						</dt>
						<dd>{desc}</dd>
					</div>
				))
			}
		</dl>
	</section>
</PageLayout>
