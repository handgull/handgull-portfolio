---
import SocialList from "@/components/SocialList.astro";
import PostPreview from "@/components/blog/PostPreview.astro";
import PageLayout from "@/layouts/Base.astro";
import { getAllPosts, sortMDByDate } from "@/utils";

const MAX_POSTS = 10;
const allPosts = await getAllPosts();
const allPostsByDate = sortMDByDate(allPosts).slice(0, MAX_POSTS);

const cactusTech: { desc: string; href?: string; title: string }[] = [
	{
		desc: "Impeller, FFI, Packages, Canvas, Build runner, Routing, Widgets, Context",
		href: "https://flutter.dev/",
		title: "Flutter",
	},
	{
		desc: "Events, State management, Reactive programming, When",
		href: "https://bloclibrary.dev/",
		title: "BLoC",
	},
	{
		desc: "Signals, DI, Defer, Standalone, Components, Lazy loading, Vite",
		href: "https://angular.io/",
		title: "Angular",
	},
	{
		desc: "Event Loop, Microservices, NestJS, Fastify, Streams",
		href: "https://nodejs.org/",
		title: "Node.js",
	},
	{
		desc: "Observable, Subject, Subscription, Scheduler, Operators, MergeMap",
		href: "https://rxjs.dev/",
		title: "RxJS",
	},
	{
		desc: "CSS, Minify, Classes",
		href: "https://tailwindcss.com",
		title: "Tailwind CSS",
	},
	{
		desc: "Docker, Kubernetes, Terraform, RabbitMQ",
		title: "Infrastructure",
	},
	{
		desc: "Rebase, Branch, Commit, Merge",
		href: "https://git-scm.com/",
		title: "Git",
	},
	{
		desc: "GenAI, Agents, Tools, LangServe",
		href: "https://www.langchain.com/",
		title: "LangChain",
	},
	{
		desc: "Jira, Agile, Pair Programming, And more...",
		title: "And more",
	},
];
---

<PageLayout meta={{ title: "Home" }}>
	<section>
		<h1 class="title mb-6">Hello World!</h1>
		<p class="mb-4">
			My name is Andrea, I am born in 1996 and I have successfully developed the good habit of
			continuous learning, thanks to the book ”Atomic Habits”.<br />
			I enjoy creating and designing useful things with a simple UI.<br />
			I don't like using outdated tools or working in environments where the architecture is not valued
			(since the paycheck will come later).<br />
			Check my personal side project app: <span class="inline-flex"
				><a
					class="cactus-link"
					href="https://zyme-nutrition.netlify.app/en"
					rel="noopener noreferrer"
					target="_blank"
					>ZYME
				</a></span
			> available on android and iOS! It's a calories counter, i hope you will like it!
		</p>
		<SocialList />
	</section>
	<!--
	<section aria-label="Blog post list" class="mt-16">
		<h2 class="title mb-4 text-xl">Posts</h2>
		<ul class="space-y-4">
			{
				allPostsByDate.map((p) => (
					<li class="flex flex-col gap-x-2 sm:flex-row">
						<PostPreview post={p} />
					</li>
				))
			}
		</ul>
	</section>
	-->
	<section class="mt-16">
		<h2 class="title mb-4 text-xl">Technologies & Buzzwords</h2>
		<dl class="space-y-4">
			{
				cactusTech.map(({ desc, href, title }) => (
					<div class="flex flex-col gap-2 md:flex-row">
						<dt>
							<span class="flex">
								<a class="cactus-link" href={href} rel="noopener noreferrer" target="_blank">
									{title}
								</a>
								:
							</span>
						</dt>
						<dd>{desc}</dd>
					</div>
				))
			}
		</dl>
	</section>
</PageLayout>
